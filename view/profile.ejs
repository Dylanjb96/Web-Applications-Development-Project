<!DOCTYPE html>
<html>

<head>
    <!-- Meta tags for responsive design -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Streetwear Login Page</title>
    <!-- External stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    <!-- Loader -->
    <div class="loader"></div>
    <!-- Container for sign-up and sign-in forms -->
    <div class="container" id="container">
        <!-- Sign-up form -->
        <div class="form-container sign-up">
            <form id="signUpForm" action="/register" method="POST">
                <h1>Create Account</h1>
                <!-- Social icons -->
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <!-- Form inputs -->
                <span> Or use your email for registeration</span>
                <input type="text" name="username" placeholder="Username">
                <input type="email" name="email" placeholder="Email"> <!-- Added name attribute -->
                <input type="password" name="password" placeholder="Password">
                <!-- Submit button -->
                <button type="submit"> Sign up </button>
            </form>
        </div>
        <!-- Sign-in form -->
        <div class="form-container sign-in">
            <form id="signInForm" action="/login" method="POST">
                <h1>Sign in</h1>
                <!-- Social icons -->
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <!-- Form inputs -->
                <span> Or use your email and password</span>
                <input type="email" name="email" placeholder="Email">
                <input type="password" name="password" placeholder="Password">
                <a href="#">Forget Your Password?</a>
                <!-- Submit button -->
                <button type="submit"> Sign in </button>
            </form>
        </div>
        <!-- Toggle container for switching between sign-up and sign-in forms -->
        <div class="toggle-container">
            <div class="toggle">
                <!-- Toggle panels -->
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of site features</p>
                    <!-- Button to switch to sign-in form -->
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, Friend!</h1>
                    <p>Register with your personal details to use all of site features</p>
                    <!-- Button to switch to sign-up form -->
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript file -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/login.js"></script>
</body>

</html>